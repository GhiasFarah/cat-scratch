<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>New Cat-Scratch Posting:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Cat-Scratch Title</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-desc">Tell Us The Story!</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary"><i class="fa fa-save">  Save</i></button>
      </div>
    </form>
  </div> 

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a class = "titles" href="/post/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}"><i class="fa fa-close">X </i></button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
