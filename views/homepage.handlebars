<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2 >
      <a class="titles" href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>
      <span class="titles2" for="img" aria-label="money"></span>


    </p>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>

{{/each}}

